{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist/out-tsc",
    "module": "esnext",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2018", "dom", "esnext"],
    "paths": {
      "@assets/*": ["app/assets/*"],
      "@shared/*": ["app/shared/*"],
      "@services/*": ["app/services/*"],
      "@sharedServices/*": ["app/shared/services/*"],
      "@components/*": ["app/components/*"],
      "@app/*": ["app/*"]
    }
  }
}
